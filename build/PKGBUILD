# Maintainer: Filip Weiss <minepkg+me@fiws.net>

pkgname=minepkg
pkgver=0.1.0
pkgrel=1
pkgdesc="Installs and manages Minecraft mods in style"
arch=('x86_64')
url="https://github.com/fiws/minepkg"
license=('MIT')
groups=()
depends=()
makedepends=('go')
optdepends=()
source=("https://github.com/fiws/$pkgname/tags/$pkgname-$pkgver.tar.xz")

build() {
  cd "$srcdir/$pkgname-$pkgver"
  go build -ldflags="-s -w" -o ./out/minepkg
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "out/minepkg" "$pkgdir/usr/bin/minepkg"
}
